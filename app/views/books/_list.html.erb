<section>
	<div class="profile-container">
   <div class="container">
    <div class="row">
     <div class="col-xs-3">
	      
         <h3>User Info</h3>

         <div>


	        <div class="profile-container">
            <%= attachment_image_tag user, :profile_image, :fill, 15, 15, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", :size =>'100x100' %>
          </div>

        <table class="table">
        <tbody>
        <tr></tr>
        <tr>
           <th>Name <h5 class="profile-name"><%= user.name %></h5></th>
           <th></th>
        </tr>
        <tr>
           <th>Introduction <h5 class="profile-name">
           <%= user.profile %></h5>
           </th>
         </tr>
        </tbody>
        </table>

          <div>
           <% if user.id == current_user.id %>
           <%= link_to "edit_user", edit_user_path(user.id), class: "edit_user_#{user.id}, col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
           <% end %>
          </div>
        </div>


     <h1>NewBook</h1>
        <!-- form_for部分 -->
        <% @book = Book.new %>
        <%= form_for(@book) do |f| %>
 
            <h4>Title</h4>
            <%= f.text_field :title, class: "book_title" %>
 
            <h4>Opinion</h4>
            <%= f.text_area :opinion, class: "book_body" %>
 
            <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
 
        <% end %>
     </div>
    </div>
   </div>
  </div>
 </section>