<body>
  <div class="container">
  <div class="row">
    <div class="col-xs-3">
        <%= render 'books/list', user: current_user %>
    </div>

      <div class="col-xs-8">
      <h1>Books</h1>
  
      <table class="table">
  	    <thead>
           <tr>
              <th></th>
  			      <th>Title</th>
  			      <th>Opinion</th>
  		    </tr>
        </thead>
  	
       <tbody>
  		   <% @books.each do |book| %>
         <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", :size =>'50x50' %></td>
              <td><%= link_to book.title, book_path(book),  class: "book_#{book.id}" %></td>
              <td ><%= book.opinion %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

   </div>
  </div>
 </div>
</body>
</html>