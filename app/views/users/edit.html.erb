<% provide(:title, "Edit user") %>
<h1>Userinfo</h1>

<div>
	<%= form_for(@user) do |f| %>

    <h4><%= f.label :name %></h4>
    <%= f.text_field :name %>

    <div class="form-group has-icon">
      <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
      </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
      <%= f.attachment_field :profile_image, placeholder: "選択されていません", class: "user-edit-form" %>
    </div>

    <h4><%= f.label :introduction %></h4>
    <%= f.text_area :profile,  class: 'form-control', placeholder: "50文字以内で入力" %>

      <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>

   <% end %>
</div>

