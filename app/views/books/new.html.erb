<body>
<div class="container">
 <div class="row">
     <div class="col-xs-3">
        <%= render 'books/list', user: current_user %>
     </div>
  <h1>Users</h1>

  <div class="col-xs-8">
    <h2>Books</h2>

    <table class="table">
      <thead>
        <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
       </tr>
      </thead>

      <tbody>
      	<% @book.each do |book| %>
    	 <tr>
    	 	<td>
            <%= attachment_image_tag book, :profile_image, :fill, 300, 300, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", :size =>'50x50' %>
            </td>
    	 	<td><%= book.title %></td>
    	 	<td><%= book.opinion %></td>
    	 </tr>
        <% end %>
      </tbody>
    </table>

  </div>
 </div>
</div>
</body>
