<body>
<div class="container">
 <div class="row">
     <div class="col-xs-3">
        <%= render 'books/list', user: current_user %>
     </div>
  <h1>Users</h1>

 <div class="col-xs-8">
  <table>
  	<thead>
  		<tr>
  			<th>image</th>
  			<th>name</th>
  			<th></th>
  		</tr>
    </thead>
  	<tbody>
  		<% @users.each do |user| %>
        <tr>
          <td ><%= attachment_image_tag user, :profile_image, :fill, 10, 10, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" :size => '100x100' %></td>
          <td ><%= user.name %></td>
          <td ><%= link_to "show", user_path(user.id), class: "show_#{user.id}" %></td>
        </tr>
      <% end %>
  	</tbody>
  </table>
 </div>

 </div>
</div>
</body>